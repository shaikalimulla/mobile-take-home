<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_page_list_bg_color"
    android:paddingTop="@dimen/divider_list_margin">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/progress_bar_margin"
        android:layout_height="40dp"
        android:layout_margin="0dp" >
    </ProgressBar>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/character_image"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/progress_bar"/>


    <ListView
        android:id="@+id/character_details_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/divider_list_margin"
        android:layout_below="@+id/character_image">

    </ListView>

    <TextView
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text=""
        android:textAlignment="inherit"
        android:textColor="@color/blue_color"
        android:fontFamily="sans-serif"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/big_text_margin" />

</RelativeLayout>
